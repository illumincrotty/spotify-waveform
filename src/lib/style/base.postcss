.svg-circle {
	aspect-ratio: 1;
	border-radius: 50%;
	vertical-align: middle;
	border: 0.25rem solid var(--text);
	padding: 0.25rem;
}

.shadow-pop {
	transition: transform 0.3s;
	outline: none;
	/* animation: shadow-pop-out 0.3s cubic-bezier(0.47, 0, 0.745, 0.715); */
	&:hover,
	&:focus-visible,
	&:active {
		transform: translateY(-0.25em);
		/* animation: shadow-pop-in 0.3s cubic-bezier(0.47, 0, 0.745, 0.715) both; */
	}
}

.card {
	display: flex;
	background: var(--overlay);
	padding: calc(var(--padding) / 2);
	align-items: center;

	min-height: 3rem;

	/* aspect-ratio: 1; */
	text-decoration: none;
	gap: var(--padding);
	color: var(--text);
	box-shadow: var(--shadow-elevation-medium);

	&:hover,
	&:focus-visible {
		outline: 0.2rem solid var(--theme);
	}

	label {
		background-color: transparent;
		display: block;
		pointer-events: none;
	}

	img,
	svg {
		aspect-ratio: 1;
		object-fit: scale-down;
		max-width: 4rem;
		box-shadow: var(--shadow-elevation-medium);
		background: var(--overlay);
		fill: var(--dark);
	}
}
