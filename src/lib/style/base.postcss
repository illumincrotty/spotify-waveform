:root {
	/* width: 100%; */
	/* height: max(100%, max-content); */
	/* scroll-behavior: smooth; */

	/* colors */
	/* #00A485 --*/
	/* #6397AE */
	/* #8B86D6 */
	/* #AB6DFF --*/
	/* #d166c7 */
	/* #e86190 */
	/* #F65D5A --*/

	--dark: #24272b;
	--dark-overlay: #000000a0;
	--light: #d7e9ff;
	--light-overlay: #ffffff40;

	/* --green: #00a485; */
	/* --purple: #ab6dff; */
	/* --red: #f65d5a; */
	/* --t1: var(--green);
	--t2: var(#6397ae);
	--t3: var(#8b86d6);
	--t4: var(--purple);
	--t5: #d166c7;
	--t6: #e86190;
	--t7: var(--red); */

	--mint: #83c5be;
	--strawberry: #ffa1dd;
	--fall: #ce8964;
	--ocean: #5497a7;

	--theme: var(--fall);

	--t1: var(--mint);
	--t2: var(--strawberry);
	--t3: var(--fall);
	--t4: var(--ocean);

	--text: var(--light);
	--bg: var(--dark);
	--overlay: var(--light-overlay);
	--overlay-anti: var(--dark-overlay);

	--font-ratio: 1.618;
	--font-ratio-2: 1.2;

	/* --font-m: calc(0.8em + 0.5vmin); */

	--font-minimum-size: 16;
	--font-maximum-size: 21;
	--font-minimum-size-pixels: calc(var(--font-minimum-size) * 1px);
	--font-m: calc(
		var(--font-minimum-size-pixels) +
			(var(--font-maximum-size) - var(--font-minimum-size)) *
			((100vw - 320px) / (1280 - 300))
	);
	/* --font-l: calc(var(--font-m) * var(--font-ratio)); */
	--font-xl: calc(var(--font-m) * var(--font-ratio) * var(--font-ratio));
	/* --font-2xl: calc(
		var(--font-m) * var(--font-ratio) * var(--font-ratio) *
			var(--font-ratio)
	); */

	--font-s: calc(var(--font-m) / var(--font-ratio-2));
	/* --font-xs: calc(var(--font-s) / var(--font-ratio-2)); */

	background-color: var(--bg);
	color: var(--text);
	fill: var(--text);
	font-family: "Atkinson Hyperlegible", sans-serif;

	transition: background 0.1s, color 0.1s;

	@media (prefers-color-scheme: dark) {
		--text: var(--light);
		--bg: var(--dark);
		--overlay: var(--light-overlay);
		--overlay-anti: var(--dark-overlay);
		&.theme-flip {
			--text: var(--dark);
			--bg: var(--light);
			--overlay: var(--dark-overlay);
			--overlay-anti: var(--light-overlay);
		}
	}

	@media (prefers-color-scheme: light) {
		--text: var(--dark);
		--bg: var(--light);
		--overlay: var(--dark-overlay);
		--overlay-anti: var(--light-overlay);

		&.theme-flip {
			--text: var(--light);
			--bg: var(--dark);
			--overlay: var(--light-overlay);
			--overlay-anti: var(--dark-overlay);
		}
	}
	@media (prefers-reduced-motion: reduce) {
		scroll-behavior: auto;
	}
}
* {
	background-color: inherit;
}

.dark {
	color: var(--dark);
	background: var(--theme);
}

nav {
	white-space: nowrap;
	align-items: center;
	font-size: var(--font-s);
}

svg {
	background: unset;
	/* fill: var(--theme); */
}

a {
	color: currentColor;
	background: none;
	text-decoration: underline solid var(--theme) 0.1rem;

	text-decoration-skip-ink: none;
	transition: all 0.4s;

	&:hover,
	&:focus-visible {
		outline: none;
		background: var(--theme);
		color: var(--dark);
		text-decoration: none;
		/* text-decoration-color: var(--bg); */
	}

	&:active {
		text-decoration-color: var(--theme);
		color: var(--bg);
		background: var(--text);
		text-decoration: none;

		/* text-decoration-color: var(--bg); */
	}
}

.unlist {
	list-style-type: none;
	padding: 0;
	margin-bottom: unset;
	margin-top: var(--gap, 0);
}

body {
	font-family: "Atkinson Hyperlegible", sans-serif;

	height: fit-content;
	width: 100%;
	/* padding: 1rem 1rem; */
	margin: 0;
	overflow-wrap: break-word;
	word-wrap: break-word;
	line-break: loose;
	font-size: var(--font-m);
	text-align: start;
	position: relative;
}

header {
	/* margin: 1rem calc((100% - var(--measure)) / 2); */
	/* background-color: var(--overlay); */
	padding-top: var(--padding);
	padding-bottom: var(--padding);
	padding-left: var(--padding);
	margin-left: auto;
	margin-right: auto;
	width: 100%;
}
main {
	width: 100%;
	max-width: var(--measure);
}

p {
	line-height: 1.8;
}

h1 {
	font-size: var(--font-xl);
	text-align: center;
}

button {
	border-radius: 2rem;
	font: inherit;
	color: inherit;
	display: block;
	border: 0.2em solid var(--theme);
}

