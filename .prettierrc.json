{
	"$schema": "https://json.schemastore.org/prettierrc",
	"arrowParens": "always",
	"bracketSpacing": true,
	"tabWidth": 4,
	"useTabs": true,
	"endOfLine": "auto",
	"quoteProps": "consistent",
	"singleQuote": true,
	"printWidth": 80,
	"overrides": [
		{ "files": "*.postcss", "options": { "singleQuote": false } }
	],
	"bracketSameLine": true,
	"svelteSortOrder": "options-scripts-markup-styles"
}
